{
  "name": "electron-hello-world-builder",
  "version": "1.0.0",
  "description": "A minimal Hello World Electron application",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder"
  },
  "author": "AI Assistant",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.helloworld",
    "productName": "HelloWorldApp",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "public"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/appicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  }
}