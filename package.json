{
  "name": "visualneo-desktop-builder",
  "version": "2.0.0",
  "description": "Convert Web Applications to Desktop Software",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder"
  },
  "author": "VisualNEO",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.visualneo.builder",
    "productName": "VisualNEO Desktop Builder",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "public"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/appicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    }
  }
}